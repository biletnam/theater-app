<% if @scheduled_event.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@scheduled_event.errors.count, "error") %> prohibited this product from being added to your cart:</h2>
 
    <ul>
    <% @scheduled_event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1><%= @event.name %> at <%= @event.venue.name %></h1>

<% if current_user && current_user.admin || current_user.id == @event.user.id %>
  <a data-confirm="Are you sure you want to edit this event?" href="/venues/<%= @event.venue_id %>/events/<%= @event.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Event</a>
  <a data-confirm="Are you sure you want to delete this event?" data-method="delete" href="/venues/<%= @event.venue_id %>/events/<%= @event.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Event</a>
<% end %>

<h4>Event Type: </h4> <%= @event.event_type %>
<h4>Featured Performers: </h4> <%= @event.featured_performers %>
<h4>Description: </h4><%= @event.description %>

<h3>Scheduled Events</h3>

<table>
  <tr>
    <td>Date</td>
    <td>Time</td>
    <td></td>
  </tr>

  <% @scheduled_events.each do |scheduled_event| %>
    <tr>
      <td><%= scheduled_event.friendly_date %></td>
      <td><%= scheduled_event.friendly_time %></td>
      <td><%= link_to "Buy Tickets", scheduled_event.buy_ticket_link %></td>
    </tr>
  <% end %>
</table>

<% if current_user && current_user.vendor %>

  <h3>Please Add Individual Scheduled Event Details</h3>

  <%= form_tag "/venues/#{@event.venue.id}/events/#{@event.id}/scheduled_events", method: :post do %>

  <div>
    <%= label_tag "Date/Time of Event:" %>
    <%= datetime_select :scheduled_event, :date_time, ampm: true %>
  </div>

  <div>
    <%= label_tag "Buy Tickets Link:" %>
    <%= text_field_tag :buy_ticket_link, @scheduled_event.buy_ticket_link %>
  </div>

  <div id="submit-new"><%= submit_tag "Submit Scheduled Event" %></div>

  <% end %>
<% end %>








