<h1>Seat Geek Venues</h1>

<% @sg_venues.each do |sg_venue| %>
  <h3><%= link_to sg_venue.name, "/sg_venues/#{sg_venue.id}" %></h3>
  <h5><%= sg_venue.full_address %></h5>

    <% if current_user && current_user.admin %>
      <a data-confirm="Are you sure you want to edit this venue?" href="/sg_venues/<%= sg_venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default back-button">Edit Venue</a>
      <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/sg_venues/<%= sg_venue.id %>" rel="nofollow" role="button" class="btn btn-default back-button">Delete Venue</a>
    <% end %>

  <hr>

<% end %>

