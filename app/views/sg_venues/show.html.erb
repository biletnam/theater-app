<h2><%= @sg_venue.name %></h2>

<div id="venue-default-photo">
<% if @sg_venue.image %>
  <%= image_tag @sg_venue.image, :style => 'max-height: 300px;' %>
<% else %>
  <img src="http://s23.postimg.org/h1xvhiszf/image_coming_soon_gray_bg.png"/>
<% end %>
</div>

<h4>Address: <%= @sg_venue.full_address %></h4>
<% if @sg_venue.phone %>
  <h4>Phone Number: <%= @sg_venue.phone %></h4>
<% end %>

<% if @sg_venue.website %>
  <h4><%= link_to "Visit Venue Website", @sg_venue.website %></h4>
<% end %>

<% if current_user && current_user.admin %>
  <%= link_to "Create Venue Using SG Information", "/sg_venues/new/#{@sg_venue.id}", :class =>"btn btn-default btn-xs active" %>
<% end %>

<%= link_to "View Seating Information", "/sg_venues/#{@sg_venue.id}/sg_seats", :class =>"btn btn-default btn-xs active" %>

<% if current_user && current_user.admin %>
  <a data-confirm="Are you sure you want to edit this venue?" href="/sg_venues/<%= @sg_venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Venue</a>
  <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/sg_venues/<%= @sg_venue.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Venue</a>
<% end %>