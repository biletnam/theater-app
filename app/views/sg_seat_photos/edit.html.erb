<% if @sg_seat_photo.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@sg_seat_photo.errors.count, "error") %></h2>
    <ul>
    <% @sg_seat_photo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Update Seat Photo</h2>

<%= form_tag "/sg_seats/#{@sg_seat.id}/sg_seat_photos/#{@sg_seat_photo.id}", method: :patch do %>
  
  <h4>Section: <%= @sg_seat.seat_section %></h4>
  <h4>Row: <%= @sg_seat.seat_row %></h4>
  <h4>Seat: <%= @sg_seat.seat_number %></h4>

  <div><%= label_tag "Photo caption" %></div>
  <div><%= text_field_tag :caption, @sg_seat_photo.caption %></div>
  <div><%= hidden_field_tag :default_photo, @sg_seat_photo.default_photo %></div>
  <div><%= hidden_field_tag :sg_seat_id, @sg_seat.id %></div>

  <h4>Uploaded Image: </h4>
  <%= image_tag @sg_seat_photo.image.thumb.url %>

  <div><%= submit_tag "Update" %></div>

<% end %> 