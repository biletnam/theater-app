<h2><%= @sg_db_venue.name %></h2>

<div id="venue-default-photo">
<% if @sg_db_venue.image != "" %>
  <%= image_tag @sg_db_venue.image, :style => 'max-height: 300px;' %>
<% else %>
  <img src="http://s23.postimg.org/h1xvhiszf/image_coming_soon_gray_bg.png"/>
<% end %>
</div>

<h4>Address: <%= @sg_db_venue.full_address %></h4>
<h4>Phone Number: <%= @sg_db_venue.phone %></h4>

<% if @sg_db_venue.website != "" %>
  <h4><%= link_to "Visit Venue Website", @sg_db_venue.website %></h4>
<% end %>

<% if current_user && current_user.admin %>
  <a data-confirm="Are you sure you want to edit this venue?" href="/sg_db_venues/<%= @sg_db_venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Venue</a>
  <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/sg_db_venues/<%= @sg_db_venue.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Venue</a>
<% end %>

<%= link_to "View Seating Information", "/sg_db_venues/#{@sg_db_venue.id}/sg_seats", :class =>"btn btn-default btn-xs active" %>

<h3>Upcoming Events</h3>
<% if current_user && current_user.admin || current_user && current_user.id == @sg_db_venue.user_id %>
  <%= link_to "Add New Event", "/sg_db_venues/#{@sg_db_venue.id}/sg_events/new", :class =>"btn btn-default btn-xs active" %>
<% end %>

<table>
  <tr>
    <td>Show</td>
    <td>Date</td>
    <td>Time</td>
  </tr>






<h3>Restaurants Nearby</h3>
<% @google_restaurants.each do |google_restaurant| %>
  <div>
    <%= link_to google_restaurant.name, "#{google_restaurant.url}" %>
    <p><%= google_restaurant.vicinity %> 
    <br>Price Level: <%= @price_level * google_restaurant.price_level.to_i %> | Rating: <%= google_restaurant.rating %></p>
    <hr>
  </div>
<% end %>

<footer><%= image_tag "https://developers.google.com/places/documentation/images/powered-by-google-on-white.png" %></footer>






