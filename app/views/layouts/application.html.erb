<!DOCTYPE html>
<html>
<head>
  <title>TheaterApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="https://code.createjs.com/easeljs-0.8.2.min.js"></script>
</head>
<body>

<%= form_tag "/sg_venue_search", class: "navbar-form navbar-left" do %>

  <%= text_field_tag :zip_code, nil, placeholder: "Address or Zip Code" %>

  <%= submit_tag "Search Theaters" %>
<% end %>

<div><%= link_to "Venues", "/venues" %></div>

<div> 
  <% Venue.all.each do |venue| %>
    <%= link_to venue.name, "/venues/#{venue.id}" %> 
  <% end %>
</div>

<div><%= link_to "All Events", "/events" %></div>

<% if current_user && current_user.vendor %>
  <div><%= link_to "Add New Venue", "/venues/new" %></div>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Sign Out", "/users/sign_out", method: :delete if user_signed_in?%>
<% else %>
  <%= link_to "Sign Up", "/users/sign_up" %>
  <%= link_to "Sign In", "/users/sign_in" %>
<% end %>






<% flash.each do |name, message| %>
  <div class="alert alert-<%= name %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
