<!DOCTYPE html>
<html>
<head>
  <title>TheaterApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>

  <script src="https://code.createjs.com/easeljs-0.8.2.min.js"></script>


</head>
<body>

<nav class="fixed-nav-bar">
	<div "nav-container">
		<div id="nav-logo"><%= image_tag('seat_scoop_work_logo_white_100.png') %></div>
		<a href="/venue_search_bar" id="venueNavLink"><div id="nav-venues" onclick="venueLink()"> Venues </div></a>
		<div id="nav-events">Events</div>
	</div>
</nav>


<div id="app-content">



<div>
  <%= form_tag "/event_search_result", class: "navbar-form navbar-left" do %>
    <%= text_field_tag :search, nil, placeholder: "Zip Code" %>
    <div><%= submit_tag "Search Events" %></div>
  <% end %>
</div>

<div><%= link_to "Venues", "/venues" %></div>

<div> 
  <% Venue.all.each do |venue| %>
    <%= link_to venue.name, "/venues/#{venue.id}" %> 
  <% end %>
</div>

<div><%= link_to "All Events", "/events" %></div>

<% if current_user && current_user.vendor %>
  <div><%= link_to "Add New Venue", "/venues/new" %></div>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Sign Out", "/users/sign_out", method: :delete if user_signed_in?%>
<% else %>
  <%= link_to "Sign Up", "/users/sign_up" %>
  <%= link_to "Sign In", "/users/sign_in" %>
<% end %>


<% flash.each do |name, message| %>
  <div class="alert alert-<%= name %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message %>
  </div>
<% end %>

<%= yield %>
</div>

</body>
</html>
