<!DOCTYPE html>
<html>
<head>
  <title>TheaterApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <script src="https://code.createjs.com/easeljs-0.8.2.min.js"></script>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>


</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand img-responsive" href="/venues"><%= image_tag "seat_scoop_work_logo_white_100.png" %></a>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="active"><a href="/venues">Home</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Venues <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="/venues">Current Venues</a></li>
                  <li><a href="/venue_name_search">Venue Search</a></li>
                </ul>
              </li>
              <li><a href="/event_search">Events</a></li>
              <% if user_signed_in? %>
              <li><%= link_to "Sign Out", "/users/sign_out", method: :delete %></li>
              <% else %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign In <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="/users/sign_in">Log In</a></li>
                  <li><a href="/users/sign_up">Sign Up</a></li>
                </ul>
              </li>
              <% end %>
              <li><a href="contact.php">Contact</a></li>
          </ul>
        </div><!--/.navbar-collapse -->
      </div>
    </div>

<div id="app-content">

  <div><%= link_to "Venues", "/venues" %></div>
  <div> 
    <% Venue.all.each do |venue| %>
      <%= link_to venue.name, "/venues/#{venue.id}" %> 
    <% end %>
  </div>

  <div><%= link_to "All Events", "/events" %></div>

  <% if current_user && current_user.vendor %>
    <div><%= link_to "Add New Venue", "/venues/new" %></div>
  <% end %>

  <% if user_signed_in? %>
    <%= link_to "Sign Out", "/users/sign_out", method: :delete if user_signed_in?%>
  <% else %>
    <%= link_to "Sign Up", "/users/sign_up" %>
    <%= link_to "Sign In", "/users/sign_in" %>
  <% end %>


  <% flash.each do |name, message| %>
    <div class="alert alert-<%= name %> alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <%= message %>
    </div>
  <% end %>

  <%= yield %>

  <footer class="fixed-footer">
    <div "footer-container">
      <div id="sg-logo"><%= image_tag('powered_by_google_on_non_white.png') %></div>
      <div id="google-logo"><%= image_tag('seat_geek_logo_102.png') %></div>
    </div>
  </footer>

</div>
</body>
</html>
