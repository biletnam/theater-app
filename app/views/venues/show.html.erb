<% if @venue.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@venue.errors.count, "error") %></h2>
 
    <ul>
    <% @venue.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2><%= @venue.name %></h2>

<div id="venue-default-photo">
<% if @venue.image != "" %>
  <%= image_tag @venue.image, :style => 'max-height: 300px;' %>
<% else %>
  <img src="http://s23.postimg.org/h1xvhiszf/image_coming_soon_gray_bg.png"/>
<% end %>
</div>

<h4>Address: <%= @venue.full_address %></h4>
<h4>Phone Number: <%= @venue.phone %></h4>

<% if @venue.website != "" %>
  <h4>Website: <%= link_to "#{@venue.website}", @venue.website %></h4>
<% end %>

<% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
  <a data-confirm="Are you sure you want to edit this venue?" href="/venues/<%= @venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Venue</a>
  <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/venues/<%= @venue.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Venue</a>
<% end %>

<%= link_to "View Seating Information", "/venues/#{@venue.id}/seats", :class =>"btn btn-default btn-xs active" %>

<h3>Upcoming Events</h3>
<% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
  <%= link_to "Add New Event", "/venues/#{@venue.id}/events/new", :class =>"btn btn-default btn-xs active" %>
<% end %>

<table>
  <tr>
    <td>Show</td>
    <td>Date</td>
    <td>Time</td>
  </tr>

<% @scheduled_events.each do |scheduled_event|%>
    <% if scheduled_event.date_time >= Time.now %>
      <tr>
        <td><%= link_to scheduled_event.event.name, "/venues/#{@venue.id}/events/#{scheduled_event.event.id}" %></td>
        <td><%= scheduled_event.friendly_date %></td>
        <td><%= scheduled_event.friendly_time %></td>
        <td><%= link_to "Buy Tickets", scheduled_event.buy_ticket_link %></td>
        <% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
          <td><a data-confirm="Are you sure you want to edit this scheduled event?" href="/venues/<%= scheduled_event.venue_id %>/events/<%= scheduled_event.event_id %>/scheduled_events/<%= scheduled_event.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit</a></td>
          <td><a data-confirm="Are you sure you want to delete this scheduled event?" data-method="delete" href="/venues/<%= scheduled_event.venue_id %>/events/<%= scheduled_event.event_id %>/scheduled_events/<%= scheduled_event.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete</a></td>
        <% end %>
      </tr>
    <% end %>
<% end %>
</table>

<h3>Venue Reviews</h3>
<%= link_to "Add New Review", "/venues/#{@venue.id}/reviews/new", :class =>"btn btn-default btn-xs active" if user_signed_in? %>

<% @reviews.each do |review| %>
  <div> 
    <h6>user: <%= review.user.user_name %></h6>
    <div style="margin-top:-8px;margin-left:10px;">"<%= review.content %>"</div>
    <hr style="margin-top:8px;">
  </div>
<% end %>

<h3>Restaurants Nearby</h3>
<% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
  <%= link_to "Add Restaurant", "/venues/#{@venue.id}/restaurants/new", :class =>"btn btn-default btn-xs active" %>
<% end %>

<% @restaurants.each do |restaurant| %>
  <div> 
    <h5><%= restaurant.name %></h5>
    <%= restaurant.full_address %>
    <br><%= restaurant.food_type %>
    <hr>
  </div>
<% end %>






