<h2><%= @venue.name %></h2>

<div id="venue-default-photo">
  <img src="http://s23.postimg.org/h1xvhiszf/image_coming_soon_gray_bg.png"/>
</div>

<h4>Address: <%= @venue.full_address %></h4>
<h4>Phone Number: <%= @venue.phone %></h4>
<% if @venue.website != nil %>
  <h4>Website: <%= @venue.website %></h4>
<% end %>

<h3>Upcoming Events</h3>

  <table>
    <tr>
      <td>Show</td>
      <td>Date</td>
      <td>Time</td>
    </tr>

    <tr>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </table>

<h3>Add Events</h3>

<%= form_tag "/venues/#{@venue.id}/events", method: :post do %>

  <div>
    <p class="label_tag"><%= label_tag "Name:" %></p>
    <%= text_field_tag :name, @event.name %>
  </div>

  <div>
    <p class="label_tag"><%= label_tag "Featured Performers:" %></p>
    <%= text_field_tag :featured_performers, @event.featured_performers %>
  </div>

  <div>
    <p class="label_tag"><%= label_tag "Event Type:" %></p>
    <%= text_field_tag :event_type, @event.event_type %>
  </div>

  <div id="submit-new"><%= submit_tag "Submit Event" %></div>

<% end %>