<h1>Venues</h1>

<% @sorted_venues.each do |venue| %>

  <h3><%= link_to venue.name, "/venues/#{venue.id}" %></h3>
  <h5><%= venue.full_address %></h5>

    <% if current_user && current_user.admin %>
      <% if venue.class == Venue %>
        <a data-confirm="Are you sure you want to edit this venue?" href="/venues/<%= venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Venue</a>
        <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/venues/<%= venue.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Venue</a>
      <% elsif venue.class == SgDbVenue %>
        <a data-confirm="Are you sure you want to edit this venue?" href="/sg_db_venues/<%= venue.id %>/edit" rel="nofollow" role="button" class="btn btn-default btn-xs active">Edit Venue</a>
        <a data-confirm="Are you sure you want to delete this venue?" data-method="delete" href="/sg_db_venues/<%= venue.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">Delete Venue</a>
      <% end %>
    <% end %>
  <hr>

<% end %>

