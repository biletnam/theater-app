<%= include_gon %>

<h3><%= @venue.name %></h3>
<h1>Seating Chart</h1>
<br>

<% if @venue.seating_chart %>
  <canvas id="seating" width="1200" height="700">This browser does not support the canvas element</canvas>

  <% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
    <div>
      <%= link_to "Add Seat", "/venues/#{@venue.id}/seats/new", :class =>"btn btn-default btn-xs active" %>
    </div>
    <br>
    <div id="venue-seats-table">
      <table>
        <tr>
          <th>Section</th>
          <th>Row</th>
          <th>Seat Number</th>
          <th>Views</th>
        </tr>
      <% @seats.each do |seat| %>
        <tr>
          <td width="100px"><%= seat.seat_section %></td>
          <td width="40px"><%= seat.seat_row %></td>
          <td width="100px"><%= seat.seat_number %></td>
          <td width="60px"><%= link_to "photos", "/seats/#{seat.id}/seat_photos/" %></td>    
          <td width="100px"><%= link_to "add photo", "/seats/#{seat.id}/seat_photos/new" if user_signed_in? %></td> 
          <% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
             <td><%= link_to "edit seat", "/venues/#{@venue.id}/seats/#{seat.id}/edit", :class =>"btn btn-default btn-xs active" %></td>
             <td><a data-confirm="Are you sure you want to delete this seat?" data-method="delete" href="/venues/<%= seat.venue_id %>/seats/<%= seat.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">delete seat</a></td>
          <% end %> 
        </tr>
      <% end %>
      </table>
      <div class="pagination-bar"><%= will_paginate @seats %></div>
    </div>
  <% end %>
<% else %>
  <br>
  <h3>Seating Chart Not Currently Available for This Venue</h3>
  <br>
  <% if @seats[0] %>
    <h5>Available seat information listed below</h5>
    <div id="venue-seats-table">
      <table>
        <tr>
          <th>Section</th>
          <th>Row</th>
          <th>Seat Number</th>
          <th>Views</th>
        </tr>
      <% @seats.each do |seat| %>
        <tr>
          <td width="100px"><%= seat.seat_section %></td>
          <td width="40px"><%= seat.seat_row %></td>
          <td width="100px"><%= seat.seat_number %></td>
          <td width="60px"><%= link_to "photos", "/seats/#{seat.id}/seat_photos/" %></td>    
          <td width="100px"><%= link_to "add photo", "/seats/#{seat.id}/seat_photos/new" if user_signed_in? %></td> 
          <% if current_user && current_user.admin || current_user && current_user.id == @venue.user_id %>
             <td><%= link_to "edit seat", "/venues/#{@venue.id}/seats/#{seat.id}/edit", :class =>"btn btn-default btn-xs active" %></td>
             <td><a data-confirm="Are you sure you want to delete this seat?" data-method="delete" href="/venues/<%= seat.venue_id %>/seats/<%= seat.id %>" rel="nofollow" role="button" class="btn btn-default btn-xs active">delete seat</a></td>
          <% end %> 
        </tr>
      <% end %>
      </table>
      <div class="pagination-bar"><%= will_paginate @seats %></div>
    </div>
  <% end %>
<% end %>

<script>
  $(function(){
    window.seatData = <%= @seat_data.html_safe %>;

    callSeating();
  });
</script>



