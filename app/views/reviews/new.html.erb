<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %></h2>
 
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Enter New Review for <%= @review.venue.name %></h2>

<%= form_tag "/venues/#{@review.venue_id}/reviews", method: :post do %>

  <div><%= label_tag "Tell us about your experience at #{@review.venue.name}" %></div>
  <div><%= text_area_tag :content, nil, :size => "50 x 3" %></div>
  <div><%= hidden_field_tag :venue_id, @review.venue.id %></div>

  <div><%= submit_tag "Submit Review", :class => "back-button btn btn-default" %></div>

<% end %> 
