<h2>Add New Photo for Seat</h2>

<%= form_tag "/seats/#{@seat.id}/seat_photos", method: :post do %>

  <div><%= label_tag "Image URL" %></div>
  <div><%= text_field_tag :image, @seat_photo.image %></div>
  <div><%= label_tag "Photo caption" %></div>
  <div><%= text_field_tag :caption, @seat_photo.caption %></div>
  <div><%= hidden_field_tag :default_photo, @seat_photo.default_photo %></div>
  <div><%= hidden_field_tag :user_id, current_user.id %></div>
  <div><%= hidden_field_tag :seat_id, @seat.id %></div>

  <div><%= submit_tag "Submit" %></div>

<% end %> 